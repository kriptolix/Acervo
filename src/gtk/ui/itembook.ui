          <object class="GtkLabel">
            <property name="label">ISBN:</property>
            <style>
              <class name="heading"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkEditableLabel" id="_isbn">
            <property name="text">1429914564</property>
            <property name="editable">false</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <property name="margin-start">15</property>
        <property name="margin-end">15</property>
        <child>
          <object class="GtkLabel">
            <property name="label">ISBN13:</property>
            <style>
              <class name="heading"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkEditableLabel" id="_isbn13">
            <property name="text">9781429914567</property>
            <property name="editable">false</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <property name="margin-start">15</property>
        <property name="margin-end">15</property>
        <child>
          <object class="GtkLabel">
