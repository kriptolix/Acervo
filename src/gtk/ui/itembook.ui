<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ItemBook" parent="GtkBox">
    <property name="orientation">1</property>
    <child>
      <object class="GtkPicture" id="_cover">
        <property name="margin-start">20</property>
        <property name="margin-end">20</property>
        <property name="margin-bottom">20</property>
        <property name="margin-top">20</property>        
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <property name="margin-start">15</property>
        <property name="margin-end">15</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Full Title:</property>
            <style>
              <class name="heading"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkEditableLabel" id="_ibn">
            <property name="text">Mistborn: The Final Empire</property>
            <property name="editable">false</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">5</property>
        <property name="margin-start">15</property>
        <property name="margin-end">15</property>
